@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
    <link rel="shortcut icon" href="~/logo.png">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/bootstrap.min.css"/>
    <!-- Css -->
    <link href="/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt"/>
<div id="alert" class="alert alert-danger col-2" asp-validation-summary="ModelOnly"
    style="position: fixed; top: 20px; right: 20px; z-index: 9999;transition: top 1s ease;font-size: large">
</div>
<section class="bg-home d-flex bg-light align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card login-page shadow mt-4 rounded border-0">
                    <div class="card-body">
                        <h4 class="text-center">Login</h4>
                        <form method="post" class="login-form mt-4 needs-validation">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="loginModel.Username">UserName<span class="text-danger">*</span></label>
                                        <input asp-for="loginModel.Username" type="text" class="form-control" placeholder="Username">
                                        <span asp-validation-for="loginModel.Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label" asp-for="loginModel.Password">Password<span class="text-danger">*</span></label>
                                        <input asp-for="loginModel.Password" type="password" class="form-control" placeholder="Password">
                                        <span asp-validation-for="loginModel.Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="d-flex justify-content-end">
                                        <a asp-page="/ims.recruitment.com/ForgotPassword" class="text-dark h6 mb-0">Forgot password</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 mb-0">
                                    <div class="d-grid">
                                        <button class="btn btn-primary">Login</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!---->
            </div> <!--end col-->
        </div><!--end row-->
    </div>
</section>
<script>
    var alert = document.getElementById("alert");
    setTimeout(function () {
        alert.style.top = "-100px";
    }, 3000);
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}