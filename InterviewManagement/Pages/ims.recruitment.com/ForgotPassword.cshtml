@page
@model InterviewManagement.Pages.ims.recruitment.com.ForgotPasswordModel
@{
    Layout = null;
    var successMessage = ViewData.ModelState["success"]?.Errors.FirstOrDefault()?.ErrorMessage;
}
<link rel="stylesheet" href="~/css/style.min.css"/>
<link rel="stylesheet" href="~/bootstrap.min.css" />
@if (!string.IsNullOrEmpty(successMessage))
{
    <div id="alert" class="alert alert-success col-2" style="position: fixed; top: 20px; right: 20px; z-index: 9999;transition: top 1s ease;font-size: large">
    @successMessage
</div>
}
<div id="alert" class="alert alert-danger col-2" asp-validation-summary="ModelOnly"
     style="position: fixed; top: 20px; right: 20px; z-index: 9999;transition: top 1s ease;font-size: large">
</div>
<section class="bg-home d-flex bg-light align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card login-page shadow mt-4 rounded border-0">
                    <div class="card-body">
                        <h4 class="text-center"><img class="w-75 h-auto" src="/logo.png"></h4>
                        <div class="justify-content-center align-items-center">
                            <div class="d-flex justify-content-center align-items-center">Please enter your email<br>
                            </div>
                            <div class="d-flex justify-content-center align-items-center">and we'll send you a link to
                                get back your account
                            </div>
                        </div>
                        <form method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label">Email:</label>
                                        <input type="text" class="form-control" asp-for="forgotPassword.Email">
                                        <span asp-validation-for="forgotPassword.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="cols-5 mb-0 align-items-end d-flex">
                                        <div class="d-grid">
                                            <button class="btn btn-primary" type="submit">
                                                Send
                                            </button>
                                        </div>
                                    </div>
                                    <div class="cols-2"></div>
                                    <div class="cols-5 mb-0 align-items-end d-flex">
                                        <div class="d-grid">
                                            <button class="btn btn-light" type="button">
                                                <a href="/">Cancel</a>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!---->
            </div> <!--end col-->
        </div><!--end row-->
    </div>
</section>
<script>
    var alert = document.getElementById("alert");
    setTimeout(function () {
        alert.style.top = "-100px";
    }, 3000);
</script>