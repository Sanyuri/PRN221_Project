@model InterviewManagement.Pages.ims.recruitment.com.test.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Offer.Id" />
            <div class="form-group">
                <label asp-for="Offer.ContractFrom" class="control-label"></label>
                <input asp-for="Offer.ContractFrom" class="form-control" />
                <span asp-validation-for="Offer.ContractFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ContractTo" class="control-label"></label>
                <input asp-for="Offer.ContractTo" class="form-control" />
                <span asp-validation-for="Offer.ContractTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.DueDate" class="control-label"></label>
                <input asp-for="Offer.DueDate" class="form-control" />
                <span asp-validation-for="Offer.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Salary" class="control-label"></label>
                <input asp-for="Offer.Salary" class="form-control" />
                <span asp-validation-for="Offer.Salary" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Offer.IsDeleted" /> @Html.DisplayNameFor(model => model.Offer.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Note" class="control-label"></label>
