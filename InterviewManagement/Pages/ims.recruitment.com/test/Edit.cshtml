            </div>
            <div class="form-group">
                <label asp-for="Offer.CandidateId" class="control-label"></label>
                <select asp-for="Offer.CandidateId" class="form-control" asp-items="ViewBag.CandidateId"></select>
                <span asp-validation-for="Offer.CandidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.PositionId" class="control-label"></label>
                <select asp-for="Offer.PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="Offer.PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ScheduleId" class="control-label"></label>
                <select asp-for="Offer.ScheduleId" class="form-control" asp-items="ViewBag.ScheduleId"></select>
                <span asp-validation-for="Offer.ScheduleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ContractId" class="control-label"></label>
                <select asp-for="Offer.ContractId" class="form-control" asp-items="ViewBag.ContractId"></select>
                <span asp-validation-for="Offer.ContractId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.DepartmentId" class="control-label"></label>
                <select asp-for="Offer.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="Offer.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.LevelId" class="control-label"></label>
                <select asp-for="Offer.LevelId" class="form-control" asp-items="ViewBag.LevelId"></select>
                <span asp-validation-for="Offer.LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
