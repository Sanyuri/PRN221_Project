@page
@model InterviewManagement.Pages.ims.recruitment.com.ResetPasswordModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/style.min.css" />
<link rel="stylesheet" href="~/bootstrap.min.css" />
<section class="bg-home d-flex bg-light align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card login-page shadow mt-4 rounded border-0">
                    <div class="card-body">
                        <h4 class="text-center"><img class="w-75 h-auto" src="~/logo.png"></h4>
                        <div class="justify-content-center align-items-center">
                            <div class="d-flex justify-content-center align-items-center">
                                Please enter your email<br>
                            </div>
                            <div class="d-flex justify-content-center align-items-center">
                                and we'll send you a link to
                                get back your account
                            </div>
                        </div>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <input type="hidden" name="token" asp-for="ResetPasword.Token" value='@Request.Query["token"]'>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label">New Password:</label>
                                        <input id="password" type="password" class="form-control" name="password" asp-for="ResetPasword.Password">
                                        <span asp-validation-for="ResetPasword.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <label class="form-label">Re-Password:</label>
                                        <input id="rePassword" type="password" class="form-control" name="rePassword" asp-for="ResetPasword.RePassword"
                                               onchange="validatePassword()">
                                        <span asp-validation-for="ResetPasword.RePassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="cols-5 mb-0 align-items-end d-flex">
                                        <div class="d-grid">
                                            <button class="btn btn-primary" type="submit">
                                                Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div><!---->
            </div> <!--end col-->
        </div><!--end row-->
    </div>
</section>
<script>
    var password = document.getElementById("password");
    var rePassword = document.getElementById("rePassword");
    var message = document.getElementById("message");

    function validatePassword() {
        if (password.value !== rePassword.value) {
            rePassword.setCustomValidity("Re-password mismatch to password");
            message.className = "invalid-feedback";
            message.innerHTML = "Re-password mismatch to password";
        } else {
            rePassword.setCustomValidity('');
            message.className = "valid-feedback";
        }
    }

    password.onchange = validatePassword;
    rePassword.onkeyup = validatePassword;
</script>
