@page
@model InterviewManagement.Pages.Jobs.CreateModel

@{
    ViewData["Title"] = "Create Job";
}

<h1>Create</h1>

<h4>Job</h4>

<div class="card bg-light">
    <div class="card-body">
        <form class="form-sample" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Job title<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input asp-for="Job.JobName" class="form-control" />
                            <span asp-validation-for="Job.JobName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Skill<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <select asp-for="SelectedSkillIds" class="form-control js-example-basic-multiple" multiple>
                                @foreach (var skill in Model.Skills)
                                {
                                    <option value="@skill.Id">@skill.SkillName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedSkillIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Start Date<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input asp-for="Job.StartDate" class="form-control" />
                            <span asp-validation-for="Job.StartDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">End Date<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input asp-for="Job.EndDate" class="form-control" />
                            <span asp-validation-for="Job.EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Salary Range<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <div class="d-flex">
                                <label class="mr-3">From</label>
                                <input asp-for="Job.SalaryMin" class="form-control" />
                                <span asp-validation-for="Job.SalaryMin" class="text-danger"></span>
                                <label class="mr-3">To</label>
                                <input asp-for="Job.SalaryMax" class="form-control" />
                                <span asp-validation-for="Job.SalaryMax" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Benefit</label>
                        <div class="col-sm-9">
                            <select asp-for="SelectedBenefitIds" class="form-control js-example-basic-multiple" multiple>
                                @foreach (var benefit in Model.Benefits)
                                {
                                    <option value="@benefit.Id">@benefit.BenefitName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedBenefitIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Working Address<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <input asp-for="Job.WorkingAddress" class="form-control" />
                            <span asp-validation-for="Job.WorkingAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Level<span class="text-danger">*</span></label>
                        <div class="col-sm-9">
                            <select asp-for="SelectedLevelIds" class="form-control js-example-basic-multiple" multiple>
                                @foreach (var level in Model.Levels)
                                {
                                    <option value="@level.Id">@level.LevelName</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedLevelIds" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="checkbox" asp-for="Job.IsDeleted" hidden/>
                    <span asp-validation-for="Job.IsDeleted"></span>
                    <input type="text" asp-for="Job.ModifiedBy" value="Admin" hidden/>
                    <span asp-validation-for="Job.ModifiedBy"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Description</label>
                        <div class="col-sm-9">
                            <textarea asp-for="Job.Description" class="form-control"></textarea>
                            <span asp-validation-for="Job.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary mr-5">Submit</button>
                <a class="btn btn-secondary text-white" role="button" asp-page="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
}
